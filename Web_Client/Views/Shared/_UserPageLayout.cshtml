<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<body>
    <nav class="navbar fixed-top navbar-expand-xl navbar-light bg-light" style="height: 100px;">
            @Html.ActionLink("PilkaBEM 2018", "Index", "Home", new { area = "" }, new { @class = "navbar-brand"})
            <ul class="nav nav-tabs">
                <li class="nav-item">Welcome, @Session["ID"].ToString() </li>
                <li class="nav-item"> | </li>
                <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Login")</li>
            </ul>
        </nav>
    <div style="margin-top: 50px;">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
